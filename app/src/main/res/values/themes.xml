<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MonnosListCryptocurrency" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryLightColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.Monnos.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/white</item>
        <item name="fontFamily">serif</item>
    </style>

    <style name="TextAppearance.Monnos.Title" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Monnos.Subtitle" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>